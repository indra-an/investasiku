<%
  set_meta_tags og: {
    :url => request.original_url,
    :title => 'Investasiku',
    :description => 'Mapan finansial bisa dimulai sekarang',
    :image => asset_url('home-top.png')
  }
%>

<div class="container contact-us">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2 class="comp-name">Kontak Kami</h2>
      <p><i class="fa fa-envelope-o" aria-hidden="true"></i>&nbsp;<%= mail_to 'admin@investasi-ku.com' %></p>
      <hr>
      <%= form_tag public_send_contact_path, :class => 'contact-us' do %>
        <div class="form-group">
          <%= text_field_tag :name, '', :placeholder => 'Nama', :class => 'form-control', :required => true %>
        </div>
        <div class="form-group">
          <%= email_field_tag :email, '', :placeholder => 'Email', :class => 'form-control', :required => true %>
        </div>
        <div class="form-group">
          <%= text_area_tag :message, '', :placeholder => 'Pertanyaan kamu', :rows => 9, :id => 'messages', :class => 'form-control', :required => true %>
        </div>
        <div class="form-group">
          <%= recaptcha_tags %>
        </div>
        <button type="submit" class="btn btn-primary contact">Send Message</button>
      <% end %>
    </div>
  </div>
</div>
