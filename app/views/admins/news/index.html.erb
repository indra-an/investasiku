<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'News' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">News Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_news_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create News
          <% end %>
          <thead>
            <th>Title</th>
            <th>Posted</th>
            <th>Control</th>
          </thead>

          <tbody>
            <tbody>
              <% if @news.empty? %>
                <tr>
                  <td colspan="3">You have no news. <%= link_to 'Create a new one!', new_admins_news_path %>.</td>
                </tr>
              <% else %>
                <% @news.each do |news| %>
                  <tr>
                    <td><%= news.title %></td>
                    <td>
                      <%= news.created_at.to_s %><br/>
                      <%= news.custom_posted_by || news.posted_by.full_name %>
                    </td>
                    <td>
                      <%= link_to 'Preview', admins_news_path(news) %>&nbsp;|
                      <%= link_to 'Edit', edit_admins_news_path(news) %>&nbsp;|
                      <%= link_to 'Destroy', admins_news_path(news), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
