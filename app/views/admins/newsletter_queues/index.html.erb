<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Newsletter Queues' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Newsletter Queues</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_newsletter_queue_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Add Queue
          <% end %>
          <thead>
            <th>Subject</th>
            <th>Status</th>
            <th>Control</th>
          </thead>

          <tbody>
            <tbody>
              <% if @newsletter_queues.empty? %>
                <tr>
                  <td colspan="3">You have no queues. <%= link_to 'Add a new one!', new_admins_newsletter_queue_path %>.</td>
                </tr>
              <% else %>
                <% @newsletter_queues.each do |newsletter_queue| %>
                  <tr>
                    <td><%= newsletter_queue.subject %></td>
                    <td><%= newsletter_queue.status %></td>
                    <td>
                      <%= link_to 'Preview', admins_newsletter_queue_path(newsletter_queue) %>
                      <% if newsletter_queue.queued? %>
                        &nbsp;|
                        <%= link_to 'Edit', edit_admins_newsletter_queue_path(newsletter_queue) %>&nbsp;|
                        <%= link_to 'Destroy', admins_newsletter_queue_path(newsletter_queue), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
